#include<stdio.h>

int main() {
	float a;  //C언어 프로그래밍 책
	float b;  //성서적세계관 책
	float c;  //파이썬 책
	int sum; //총 금액
	float d;  //총 금액에서 할인한 금액
	const float sale = 0.9;  //할인율

	printf("C언어 프로그래밍 : "); //C언어 프로그래밍 출력
	scanf_s("%f", &a);  //C언어 프로그래밍 책 값 입력

	printf("성서적세계관 : ");  //성서적세계관 출력
	scanf_s("%f", &b);  //성서적세계관 책 값 입력

	printf("파이썬 : ");  //파이썬 출력
	scanf_s("%f", &c);  //파이썬 책 값 입력

	sum = a + b + c;  //책 값 총 금액
	printf("총 금액 : %d 원\n", sum);  //총 금액 : 더한 값 출력

	d = sum * sale;  //할인 금액 계산
	printf("할인 금액 : %.2f 원", d);  //할인 금액 출력

	return 0;
}
